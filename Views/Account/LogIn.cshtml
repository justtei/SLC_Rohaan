    <section class="space-ptb">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="login bg-light p-4 p-sm-5">
                        <h3 class="text-primary">@StaticContent.Ttl_LogIn</h3>
                        <p class="text-dark">@StaticContent.WtrMrk_LogIn</p>
                            @using (Html.BeginForm())
                            {
                                <span style="color:red;">@ViewBag.Msg</span>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Username)
                                    @Html.EditorFor(model => model.Username, new { @class = "required" })
                                    @Html.ValidationMessageFor(model => model.Username)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Password)
                                    @Html.EditorFor(model => model.Password, new { @class = "required" })
                                    @Html.ValidationMessageFor(model => model.Password)
                                </div>
                                <div class="form-group">
                                    <label class="checkbox">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                    </label>
                                </div>
                                <div class="d-sm-flex align-items-center">
                                    <input type="submit" value="@StaticContent.Ttl_LogIn" class="btn btn-primary" />
                                    <p class="mb-0 ml-sm-4 mt-sm-0 mt-4">Don’t have an account? <a href="sign-up.html"><b>Create Account</b></a></p>
                                </div>
