@using MSLivingChoices.Localization
@model MSLivingChoices.Mvc.Uipc.Admin.ViewModels.UserVm

@if (User.Identity.IsAuthenticated)
{
    <ul class="nav pull-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Html.Raw(string.Format(StaticContent.Login_HelloUsername, Model.FullName))<b class="caret"></b></a>
            <ul class="dropdown-menu">
                @*<li>@Html.ActionLink(StaticContent.Login_ChangePassword, "ChangePassword", "Account")</li>*@
                <li>@Html.ActionLink(StaticContent.Login_LogOff, "LogOff", "Account")</li>
            </ul>
        </li>
    </ul>
}
else
{
    <div class="footer-row-item">
        @Html.ActionLink(StaticContent.Login_AdvertiserLogin, "LogIn", "Account")
    </div>
}